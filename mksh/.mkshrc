#
# ~/.mkshrc
#

# aliases
alias chmod='chmod 755'
alias grep='grep --color=auto'
alias ls='ls -h --color=auto'
alias please='sudo `fc -n -l -1`'
alias svim='sudoedit'

# binds
bind ^L=clear-screen

# environment variables
export EDITOR="vim"
export VISUAL="vim"

# prompts
PS1=' $(tput setaf 6)$(pwd | sed s:$HOME:~:) $(tput setaf 2)\$$(tput sgr0) '
PS2=' > '
PS3=' #? '
PS4=' + '
