#!/bin/sh

prompt () {
	_ERR=$?
	_UID=$(id -u)
	_JOB=$(jobs | wc -l)

	[ $_UID -eq 0 ] && echo -n '[31mâ”€' || echo -n '[30mâ”€'
	[ $_JOB -ne 0 ] && echo -n '[32mâ”€' || echo -n '[30mâ”€'
	[ $_ERR -ne 0 ] && echo -n '[33mâ”€' || echo -n '[30mâ”€'
	
	echo -n '[0m'
}

PS1='$(prompt) '
PS2='> '
PS3='#? '
PS4='+ '
