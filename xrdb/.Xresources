#include "/home/quiv/etc/colours/jschx"

!URxvt*geometry: 100x25
URxvt.internalBorder: 22

! -- scrollbar
URxvt.scrollstyle: plain
URxvt.scrollBar: false
URxvt*scrollTtyOuput: false
URxvt*scrollWidthBuffer: true
URxvt*scrollTtyKeypress: true

! -- login shell
URxvt*loginShell: false

! -- font
!URxvt.font:xft:Tewi:pixelsize=11,\
!	[codeset=JISX0208]xft:Kochi Gothic:pixelsize=10
!URxvt.boldFont:xft:Tewi:pixelsize=11,\
!	[codeset=JISX0208]xft:Kochi Gothic:pixelsize=10
!URxvt.imFont:xft:Kochi Gothic:pixelsize=10:antialias=false

URxvt*font:-*-profont-*-*-*-*-11-*-*-*-*-*-*-*
URxvt*boldFont:
!URxvt.font:xft:m +1m:style=regular:pixelsize=10.5

! -- perl
!URxvt.perl-ext-common: default,matcher,selection-to-clipboard
!URxvt.url-select.launcher: firefox
!URxvt.matcher.rend.0: Uline fg16
!URxvt.matcher.button: 1

Xft.antialias:	1
Xft.autohint:	0
Xft.dpi:	96
Xft.hinting:	1
Xft.hintstyle:	hintfull
Xft.lcdfilter:	lcddefault
Xft.rgba:	rgb
